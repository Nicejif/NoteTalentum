<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F854"
    android:orientation="vertical"
    tools:context="es.danie.noteapp.NoteDetailFragment"
    android:padding="5dp">

    <EditText
        android:id="@+id/fragment_note_detail_title"
        android:hint="Enter note title"
        android:background="@drawable/borde_redondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="3.5"/>

    <EditText
        android:id="@+id/fragment_note_detail_description"
        android:hint="Enter note description"
        android:background="@drawable/borde_redondo_atras"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|left"
        android:layout_marginTop="5dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/button_back"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/borde_redondo"
        android:text="Back"
       />

    <Button
        android:id="@+id/button_guardar"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/borde_redondo"
        android:text="guardar"/>


</LinearLayout>
